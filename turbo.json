{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["NODE_ENV"],
  "globalDependencies": [".env", "backend/.env", "frontend/.env"],
  "tasks": {
    "setup": {
      "cache": false,
      "outputs": ["backend/.venv/**"],
      "inputs": ["backend/requirements.txt"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["frontend/.next/**", "!frontend/.next/cache/**", "backend/dist/**"],
      "env": ["OPENAI_API_KEY"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env",
        "backend/.env*",
        "frontend/.env*"
      ]
    },
    "dev": {
      "dependsOn": ["setup"],
      "cache": false,
      "persistent": true,
      "env": ["OPENAI_API_KEY"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env",
        "backend/.env*",
        "frontend/.env*"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [],
      "inputs": ["**/*.py", "ruff.toml", "pyproject.toml"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": false,
      "outputs": [],
      "inputs": ["**/*.py", "ruff.toml", "pyproject.toml"]
    },
    "format": {
      "cache": false,
      "outputs": [],
      "inputs": ["**/*.py", "ruff.toml", "pyproject.toml"]
    },
    "format:check": {
      "outputs": [],
      "inputs": ["**/*.py", "ruff.toml", "pyproject.toml"]
    },
    "check": {
      "dependsOn": ["^check"],
      "outputs": [],
      "inputs": ["**/*.py", "ruff.toml", "pyproject.toml"]
    },
    "check:fix": {
      "dependsOn": ["^check:fix"],
      "cache": false,
      "outputs": [],
      "inputs": ["**/*.py", "ruff.toml", "pyproject.toml"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": [],
      "inputs": ["**/*.py", "mypy.ini", "pyproject.toml"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    }
  }
}
